{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "formatter": {
        "formatWithErrors": true,
        "lineWidth": 120,
        "indentStyle": "space",
        "indentWidth": 4,
        "attributePosition": "auto"
    },
    "css": {
        "formatter": {
            "enabled": true
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    }
}
